vbell off
vbell_msg "Ring"

autodetach on

startup_message off

defscrollback 1000

hardstatus alwayslastline '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{+b m}(%{W}%n*%f%t%?(%u)%?%{m})%{-b w}%?%+Lw%?%?%= %{g}][%{c} %D %M %d %{g}%c %{g}]'

bindkey "^[[c" next
bindkey "^[[d" prev
bindkey "^[[b" focus

altscreen on
